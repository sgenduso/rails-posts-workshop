<p>
  <%= link_to "Edit Post", edit_post_path(@post) %>
   |
  <%= link_to "Delete Post", post_path(@post), method: :delete %>
   |
  <%= link_to "Add Comment", new_post_comment_path(@post)%>
</p>

<h1><%= @post.title %></h1>
<h4>Posted by: <%= @post.author %></h4>
<p><%= @post.body %></p>

<div class='comments'>
  Comments:
  <% @post.comments.each do |comment| %>
    <p class='well'>
      <%= comment.comment %>
    </p>
  <% end %>
</div>
